<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="favor"
            type="com.example.jesta.GetJestaQuery.GetFavor" />

        <variable
            name="transaction"
            type="com.example.jesta.GetAllUserFavorsRequestedTransactionQuery.GetAllUserFavorsRequestedTransaction" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/image_container"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_side"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="50dp"
            android:outlineAmbientShadowColor="@color/black"
            >
            
            
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_side"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/icon"
            android:layout_marginStart="@dimen/margin_side"
            android:text="נועם רוצה לעשות לך ג'סטה"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/positive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_marginStart="@dimen/margin_side"
            android:text="מוכן לבצע"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/details_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/positive_btn"
            app:layout_constraintTop_toTopOf="@id/positive_btn"
            android:layout_marginStart="@dimen/margin_side"
            android:text="@string/full_details"
            android:backgroundTint="@color/white"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title"
            android:layout_marginEnd="@dimen/margin_side"
            app:notificationDate="@{transaction.dateCreated.toString()}"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>